{
  "name": "nole",
  "version": "2.1.0",
  "type": "module",
  "description": "Testing Library for Typescript projects",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/co3moz/nole"
  },
  "bin": {
    "nole": "./bin/nole.js"
  },
  "scripts": {
    "build": "tsc",
    "test": "node --loader=ts-node/esm ./bin/nole.js ./test/**/*.test.ts ./src/**/*.test.ts",
    "coverage": "c8 npm run test"
  },
  "keywords": [
    "typescript",
    "test",
    "library"
  ],
  "author": "co3moz",
  "license": "ISC",
  "dependencies": {
    "@types/node": "^16.11.41",
    "camelcase": "^7.0.0",
    "colors": "^1.3.3",
    "commander": "^2.19.0",
    "glob": "^7.2.3",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.3"
  },
  "devDependencies": {
    "c8": "^7.11.3"
  },
  "c8": {
    "all": true,
    "check-coverage": true,
    "report-dir": "./coverage",
    "reporter": [
      "text",
      "lcovonly",
      "text-summary"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.test.ts"
    ]
  }
}
